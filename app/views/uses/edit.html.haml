- provide(:title, "Edit user")
%h1 Update your profile
.row
  .col-md-6.col-md-offset-3
    = form_for(@use, html: { class: 'directUpload', multipart: true, data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f|

      = render 'shared/error_messages', object: f.object
      = f.label :avatar_url
      = f.file_field :avatar_url
      = f.label :name
      = f.text_field :name, class: 'form-control'
      = f.label :email
      = f.email_field :email, class: 'form-control'
      = f.label :password
      = f.password_field :password, class: 'form-control'
      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation, class: 'form-control'
      = f.submit "Save changes", class: "btn btn-primary"
    .gravatar_edit
      = gravatar_for @use
      %a{:href => "http://gravatar.com/emails", :target => "_blank"} change