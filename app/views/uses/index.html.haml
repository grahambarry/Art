.center
- provide(:title, 'All uses')
.center
	%h1 Artists

.uses
	%ul
	- @uses.each do |use|
		.box1
			%li
				= render :partial => use

.col-md-12.col-md-offset-4
	= will_paginate @uses

.col-md-4.col-md-offset-4.center
	.form-inline
	.form-group
		= form_tag(uses_path, :method => "get", id: "search-form") do
			= text_field_tag :search, params[:search], placeholder: "Search Artists", class: 'form-control'
			= submit_tag "Search", name: nil, class: 'btn btn-primary inline-button'
			%end





