%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    .navbar-brand= link_to "ArtRising.ie", root_path
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Home", root_path
        - if user_signed_in?
          %li= link_to "Artists", '#'
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", current_use
              %li= link_to "Settings", '#'
              %li.divider
              %li
                = link_to "Log out", logout_path, method: "delete"
        - else
          %li= link_to "Log in", login_path
  %nav.navbar.navbar-default
    .container
      .navbar-brand= link_to "ArtRising.ie", root_path

      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "New Pin", new_pin_path
          %li= link_to "Account", edit_use_registration_path
          %li= link_to "Sign Out", destroy_use_session_path, method: :delete
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Sign Up", new_use_path
          %li= link_to "Log In", login_path
  .container
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert alert-info"
    = yield
.container            