/%header.nav.navbar.navbar-default.navbar-custom.navbar-fixed-top
%header.nav.navbar.navbar-default.navbar-custom.navbar-fixed-top
  #top-bar
    .container

      .ten.columns
        %ul.top-bar-menu
          %li.phone-email-top
            %i.fa.fa-phone
            ++353 (0)85 756 5416
          %li
            %i.fa.fa-envelope
            %a{:href => "contact_path"} art@artrising.ie
          %li
            .top-bar-dropdown
              %span English
              %ul.options
                %li
                  .arrow
                    %li
                      %a{:href => "#"} English
                    %li
                      %a{:href => "#"} Polish
                    %li
                      %a{:href => "#"} Deutsch
                %li
                  .top-bar-dropdown
                    %span USD
                    %ul.options
                      %li
                        .arrow
                      %li
                        %a{:href => "#"} USD
                      %li
                        %a{:href => "#"} PLN
                      %li
                        %a{:href => "#"} EUR

            .six.columns
              %ul.social-icons
                %li
                  %a.facebook{:href => "http://www.facebook.com/artrising"}
                    %i.icon-facebook
                %li
                  %a.twitter{:href => "#"}
                    %i.icon-twitter
                %li
                  %a.youtube{:href => "#"}
                    %i.icon-youtube
                %li
                  %a.gplus{:href => "#"}
                    %i.icon-gplus
                %li
                  %a.pinterest{:href => "#"}
                    %i.icon-pinterest

  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path}
        =image_tag("Art-Rising-Logo-sml.png")
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => root_path}
            SHOP NOW
            %span.sr-only (current)
      %ul.nav.navbar-nav.navbar-right
        %li.form.navbar-form.navbar{:role => "search" }
          .input-group
            %nav.top-search
              %form.navbar-rights{:action => "#", :method => "get"}
                %button
                  %i.fa.fa-search
                %input.search-field{:placeholder => "Art, Artists, Photography, Places", :type => "text", :value => ""}/


             


        - if logged_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              My Profile
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", current_use
              %li= link_to "Settings", edit_use_path(current_use)
              %li= link_to "Add Art", new_pin_path

              %li
                = link_to "Log out", logout_path, method: "delete"
        - else
            
          %ul.nav.navbar-nav
            %li= link_to "Log in", login_path
            %li
              %a{:href => signup_path} Sign Up

