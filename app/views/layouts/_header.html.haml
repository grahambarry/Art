%header.nav.navbar.navbar-default.navbar-inverse.navbar-custom.navbar-fixed-top
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path} 
        =image_tag("Art-Rising-Logo-sml.png")
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => root_path}
            SHOP NOW
            %span.sr-only (current)
      %ul.nav.navbar-nav.navbar-right
        %li.form.navbar-form.navbar{:role => "search" }
          .input-group.mystyle
            %input.form-control{:placeholder => "Art, Artists, Photography, Places", :type => "text", :method => "get", id: "search-form"}
            %span.input-group-btn
              %button.btn.btn-default{"aria-label" => "Left Align", :type => "button", name: nil,}
                %span.glyphicon.glyphicon-search{"aria-hidden" => "true"}


        - if logged_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              My Profile
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", current_use
              %li= link_to "Settings", edit_use_path(current_use)
              %li= link_to "Add Art", new_pin_path
              %li.divider
              %li
                = link_to "Log out", logout_path, method: "delete"
        - else
          %li= link_to "Log in", login_path
          %ul.nav.navbar-nav.navbar.pull-right
            %li
              %a{:href => login_path} Sign In
            %li
              %p.navbar-btn
                %a.btn.btn-primary.btn-sm{:href => signup_path} Sign Up
          / /.navbar-collapse
        / /.container-fluid
