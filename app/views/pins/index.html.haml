#flexcontainer.bg8
	- @pins.each do |pin|
		.grid-sizer
		.item			
			.grid
				%figure.effect-phoebe
					= image_tag pin.image.url(:large)
					%figcaption
						%h2
							= link_to pin.title, pin

						%p
							= link_to pin.description, pin
							%br 
								= pin.use.name
							%br 
							%a{:href => "#"} View more
.col-md-4.col-md-offset-4.center			
	#infinite-scrolling
	= will_paginate @pins








				