#pins.transitions-enabled
	- @pins.each do |pin|
		.box.panel.panel-default
			#my-posts
				.index_frame_container.cover
					= image_tag pin.image.url(:medium), :class => "style_image" + pin.aspect.to_s, :style => "top: #{@picture_frames = PictureFrame.where(aspect_frame: pin.aspect.to_s).limit(1).take!.top}" + '%; ' "left: #{@picture_frames = PictureFrame.where(aspect_frame: pin.aspect.to_s).limit(1).take!.left}" + '%;' "width: #{101 - @picture_frames = PictureFrame.where(aspect_frame: pin.aspect.to_s).limit(1).take!.left * 2}" + '%; ' "height: #{101 - @picture_frames = PictureFrame.where(aspect_frame: pin.aspect.to_s).limit(1).take!.top * 2}" + '%;'  
					= image_tag @picture_frames = PictureFrame.where(aspect_frame: pin.aspect.to_s).limit(1).take!.image.url(:original), :class => "style_image_frame" + pin.aspect.to_s


				%h2= link_to pin.title, pin
				%p.use
					Submitted by
					= pin.use.name
					= pin.image.aspect_ratio(:original)
.grid
	%figure.effect-phoebe
		%img{:alt => "img02", :src => "/assets/2.jpg"}/
		%figcaption
			%h2
				Plain
				%span Phoebe
			%p
				%a{:href => "#"}
				%i.fa.fa-fw.fa-user
				%a{:href => "#"}
				%i.fa.fa-fw.fa-heart
				%a{:href => "#"}
				%i.fa.fa-fw.fa-cog

- @pins.each do |pin|
	.grid
		%figure.effect-phoebe
			= image_tag pin.image.url(:large)
			%figcaption
				%h2
					= link_to pin.title, pin

				%p
					= link_to pin.description, pin
					%br 
						= pin.use.name
					%br 
					%a{:href => "#"} View more


.flexy
	- @pins.each do |pin|
		%div
			= image_tag pin.image.url(:large)


.col-md-4.col-md-offset-4.center			
	#infinite-scrolling
		= will_paginate @pins
