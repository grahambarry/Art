%body.boxed.bg8
	#wrapper.light
		%section.titlebar
			.container
				.sixteen.columns
					.twelve.columns.pull-right
						#cart

							.cart-btn
								%a.button.adc{:href => "#"} $178.00
							.cart-list
								.arrow
								.cart-amount
									%span 2 items in the shopping cart
								%ul
									%li
										%a{:href => "#"}
										%img{:alt => "", :src => "/assets/small_product_list_08.jpg"}/
										%a{:href => "#"} Converse All Star Trainers
										%span 

										.clearfix
									%li
										%a{:href => "#"}
										%img{:alt => "", :src => "/assets/small_product_list_08.jpg"}/
										%a{:href => "#"} Converse All Star Trainers
										%span 1 x $79.00
										.clearfix

								.cart-buttons.button
									%a.view-cart{:href => cart_path}
										.typecustom{"data-hover" => "View Cart"}
											%h3 View Cart
									%a.checkout.typecustom{:href => "checkout-billing-details.html"}
										%h3{"data-hover" => "Checkout"} Checkout
								.clearfix
				%nav
					#breadcrumbs
						%ul
							%li
								%a{:href => root_path} Home
							%li
								= link_to @pin.use.name, @pin.use
							%li
								= link_to @pin.title, @pin
.light2
	.container
		.eight.columns
			.slider-padding
			#product-slider.royalSlider.rsDefault
				- @picture_frames = PictureFrame.all.where(aspect: @pin.aspect.to_s).each do |picture_frame|
					.index_frame_container{"data-rsTmb" => picture_frame.image.url(:thumb), :class => "rsImg", :class => "style_image_frame" + @pin.aspect.to_s, id: 'frame-flipper' }
						= image_tag @pin.image.url(:large), :class => "rsImg", :class => "style_image" + @pin.aspect.to_s, :style => "top: #{@picture_frames = PictureFrame.where(aspect: @pin.aspect.to_s).limit(1).take!.top}" + '%; ' "left: #{@picture_frames = PictureFrame.where(aspect: @pin.aspect.to_s).limit(1).take!.left}" + '%;' "width: #{101 - @picture_frames = PictureFrame.where(aspect: @pin.aspect.to_s).limit(1).take!.left * 2}" + '%;' "height: #{101 - @picture_frames = PictureFrame.where(aspect: @pin.aspect.to_s).limit(1).take!.top * 2}" + '%;', "data-rsTmb" => "/assets/product_item_thumb_02a.png"
						= image_tag picture_frame.image.url(:large), :class => "rsImg", :class => "style_image_frame" + @pin.aspect.to_s, id: 'frame-flipper' 


			.clearfix

		.eight.columns
			.product-page

				%section.title
					%h2= @pin.title
					%span.product-price-discount
						%i= number_to_currency(@pin.price, :unit => "â‚¬")
				.reviews-counter
					.rating.five-stars
						.star-rating
						.star-bg
					%span 3 Reviews

				%section
					#product-artist
						Artist:
						= @pin.use.name
					%p.margin-reset
						= @pin.description
						%a{:href => "http://www.grazermedia.com"} Grazermedia
						

					.share-buttons
						%ul
							%li
								%a{:href => "#"} Share
							%li.share-facebook
								%a{:href => "#"} Facebook
							%li.share-twitter
								%a{:href => "#"} Twitter
							%li.share-gplus
								%a{:href => "#"} Google Plus
							%li.share-pinit
								%a{:href => "#"} Pin It
					.clearfix

				%section.variables
					.four.alpha.columns
						%label{:for => "size"} Frame Size
						%select#size{:name => "size"}
							%option 49cm x 39cm
							%option 59cm x 49cm
							%option 91cm x 61cm
					.four.omega.columns
						%label{:for => "color"} Color
						%select#color{:name => "color"}
							%option Black
							%option White
							%option Brown
					.clearfix
					%section.linking
						%form{:action => "#"}
							.qtyminus
							%input.qty{:name => "quantity", :type => "text", :value => "1"}/
							.qtyplus

						%a.button.adc{:href => "/cart/#{@pin.id}"} Add to Cart 
						.btn-group.pull-right
							= link_to like_pin_path(@pin), method: :put, class: "btn btn-default" do
								%span.glyphicon.glyphicon-heart
								= @pin.get_upvotes.size
							- if current_use?(@pin.use)
								= link_to "Edit", edit_pin_path, class: "btn btn-default"
								= link_to "Delete", pin_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
					.clearfix


